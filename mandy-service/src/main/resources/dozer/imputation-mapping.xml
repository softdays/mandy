          xsi:schemaLocation="http://dozer.sourceforge.net
          http://dozer.sourceforge.net/schema/beanmapping.xsd">

    <mapping wildcard="false">
        <class-a>org.softdays.mandy.core.model.Imputation</class-a>
        <class-b>org.softdays.mandy.dto.ImputationDto</class-b>
        <field>
            <a>id</a>
            <b>imputationId</b>
        </field>
        <field>
            <a>activity.id</a>
            <b>activityId</b>
        </field>
        <field>
            <a>resource.id</a>
            <b>resourceId</b>
        </field>
        <field copy-by-reference="true">
            <a>date</a>
            <b>date</b>
        </field>
        <field>
            <a>quota</a>
            <b>quota</b>
        </field>
        <field>
            <a>comment</a>
